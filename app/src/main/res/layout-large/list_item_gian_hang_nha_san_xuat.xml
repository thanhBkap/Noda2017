<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGianHangNSX"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="25dp"
                android:textColor="#000"
                android:id="@+id/txtGianHangNSXTenSP"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đậu đỗ" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:layout_marginBottom="20dp"
                    android:background="#000"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/viewgiua0000"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_toLeftOf="@+id/viewgiua0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đơn giá(/kg)" />

                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:id="@+id/txtGianHangNSXDonGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="99.999 đ" />
                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/viewgiua0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đặt hàng" />

                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:id="@+id/txtGianHangNSXGiaoHang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45h:07p" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_marginBottom="1dp"
                    android:textSize="11dp"
                    android:textColor="#fff"
                    android:background="@drawable/oval_dangnhap"
                    android:id="@+id/btnGianHangNSXDatHang"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Đặt hàng" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>