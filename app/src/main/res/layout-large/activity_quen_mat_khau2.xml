<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quen_mat_khau2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.wimex.mbns.SignInSignUp.QuenMatKhau2"
    android:background="#fff">
    <include layout="@layout/toolbar"/>
    <EditText
        android:textSize="20dp"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColorHint="#7c7c7c"
        android:layout_marginTop="20dp"
        android:id="@+id/edQMKXacNhanSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:hint="Nhập mã xác nhận của bạn"/>
    <Button
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_dangnhap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_gravity="center"
        android:id="@+id/btQMKXacNhanMaDienThoai"/>
</LinearLayout>
