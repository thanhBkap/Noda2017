<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quen_matk_khau3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wimex.mbns.SignInSignUp.QuenMatKhau3"
    android:background="#fff">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <EditText
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textColorHint="#8b8b8b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQMKNhapLaiPass1"
            android:hint="Nhập mật khẩu mới"/>
        <EditText
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textColorHint="#8b8b8b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQMKNhapLaiPass2"
            android:hint="Nhập lại mật khẩu mới"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_dangnhap"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btnQMKXacNhan"
        android:text="Xác nhận"
        android:layout_gravity="center"/>
</LinearLayout>
