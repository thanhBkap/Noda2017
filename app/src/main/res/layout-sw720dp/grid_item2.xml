<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="210dp"
    android:background="@drawable/khung"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imgAnhLoaiSanPham"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp" />

    <LinearLayout
        android:id="@+id/layout_loai_san_pham"
        android:layout_width="match_parent"
        android:layout_below="@id/imgAnhLoaiSanPham"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/txtTenLoaiSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAnhLoaiSanPham"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="United"
            android:textColor="#292828"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSoLuongLoaiSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAnhLoaiSanPham"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/txtTenLoaiSanPham"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorDialog"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>



    <TextView
        android:id="@+id/txtchitiet_LSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_loai_san_pham"
        android:layout_centerHorizontal="true"
        android:text="chi tiet"
        android:textColor="#292828" />

</RelativeLayout>