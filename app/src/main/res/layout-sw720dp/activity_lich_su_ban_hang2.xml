<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wimex.mbns.NguoiMua.LichSuMuaHangActivity"
    android:background="#fff">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/rels"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <RelativeLayout
            android:id="@+id/rels1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/Viewcenter1">
            <TextView
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thu hoạch"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/Viewcenter1"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/Viewcenter1"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rels2"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn giá"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng" />
        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rels"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/tongls"
        android:layout_marginBottom="18dp"
        android:id="@+id/lvLichSuBanHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/dash"></ListView>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tongls"
        android:background="#000"
        android:layout_marginBottom="9dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tongls"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG TIỀN THANH TOÁN: "
            android:textColor="#000"
            android:textSize="35dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000 đ"
                android:textSize="35dp"
                android:textColor="#000"
                android:id="@+id/txtLichSuBanHangTongTien"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
